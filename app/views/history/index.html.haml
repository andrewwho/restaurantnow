.hero-unit 
  %h1 Recent Searches
.well
  - @history.each do |history|
    %table
      %tr
        %td
          = link_to history.search, history_path(history)
        %td= link_to t('.destroy', :default => t("helpers.links.destroy")), history_path(history), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'